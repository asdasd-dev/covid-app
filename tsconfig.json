{
    "compilerOptions": {
        "outDir": "./dist",
        "noImplicitAny": true,
        "module": "es6",
        "target": "es5",
        "jsx": "react",
        "allowJs": false,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "types": ["node"],
        "typeRoots": ["node-modules/@types"],
        "moduleResolution": "node"
    },
    "include": ["src/**/*", "index.d.ts"],
    "exclude": ["**/node_modules", "**/dist", "**/build"]
}
