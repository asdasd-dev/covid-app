{
    "compilerOptions": {
        "outDir": "./dist",
        "noImplicitAny": true,
        "module": "es6",
        "target": "es5",
        "jsx": "react",
        "allowJs": false,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "types": ["jest", "node"],
        "moduleResolution": "node",
        "baseUrl": "src",
        "paths": {
            "test-utils": ["./utils/test-utils"]
        }
    },
    "include": ["src/**/*", "index.d.ts", "__mocks__/**/*", "jestSetup.ts", "tests/**/*", "utils/**/*"]
}
